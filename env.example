# ==========================================
# Star_Void Configuration Template
# ==========================================
# Скопируйте этот файл в src/config/config.env и заполните значения

# LLM API Settings
# ==========================================
LLM_PROVIDER=openai          # Варианты: openai, anthropic, local
MODEL_NAME=gpt-4             # gpt-3.5-turbo, gpt-4, claude-3-opus-20240229, llama2

# API ключи (получите на сайтах провайдеров)
OPENAI_API_KEY=sk-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Для локальной модели (Ollama)
LOCAL_API_URL=http://localhost:11434/api/generate

# LLM Parameters
# ==========================================
MAX_TOKENS=150               # Максимум токенов в ответе (50-300 рекомендуется)
TEMPERATURE=0.7              # Креативность (0.0 = детерминированный, 1.0 = случайный)

# Behavior Settings
# ==========================================
SILENCE_PROBABILITY=0.2      # Базовая вероятность молчания (0.0 - 1.0)
VOID_SPEAK_PROBABILITY=0.05  # Вероятность спонтанного высказывания в void режиме

# Filters
# ==========================================
MAX_RESPONSE_LENGTH=200      # Максимальная длина ответа в символах
ENABLE_ADVICE_FILTER=true    # Включить фильтр советов
ENABLE_EMPATHY_FILTER=true   # Включить фильтр эмпатичных фраз

# Delays (в секундах)
# ==========================================
MIN_DELAY_SEC=0.5            # Минимальная задержка перед ответом
MAX_DELAY_SEC=2.0            # Максимальная задержка перед ответом
TYPING_SPEED_CPS=30          # Скорость печати (символов в секунду)

# Logging (опционально)
# ==========================================
ENABLE_LOGGING=false         # Включить логирование диалогов
LOG_FILE=logs/star_void.log  # Путь к файлу логов
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR

# Advanced Settings (для экспериментов)
# ==========================================
USE_THINKING_ANIMATION=true  # Показывать анимацию "думающего" состояния
VOID_MIN_WAIT_SEC=300        # Минимальное время молчания в void режиме (5 минут)
VOID_MAX_WAIT_SEC=1200       # Максимальное время молчания в void режиме (20 минут)
